{
  "tests": [
    {
      "name": "Valid contact form submission",
      "method": "POST",
      "body": {
        "name": "Иван Петров",
        "phone": "+7 (999) 123-45-67",
        "email": "test@example.com",
        "company": "ООО Тест",
        "message": "Тестовое сообщение с формы обратной связи"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing required name field",
      "method": "POST",
      "body": {
        "phone": "+7 (999) 123-45-67",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid email format",
      "method": "POST",
      "body": {
        "name": "Иван Петров",
        "phone": "+7 (999) 123-45-67",
        "email": "invalid-email",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
